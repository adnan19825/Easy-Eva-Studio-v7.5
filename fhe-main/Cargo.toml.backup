[package]
name = "fhe-main"
version = "0.1.0"
edition = "2021"

[dependencies]
fhe-core = { path = "../fhe-core" }
clap = { version = "4.0", features = ["derive"] }
rayon = "1.8"

[dev-dependencies]
criterion = "0.5"

[[bench]]
name = "integration_benchmarks"
harness = false

[profile.release]
panic = "abort"
lto = true
codegen-units = 1

[profile.dev]
opt-level = 1  # Schnellere Entwicklung
